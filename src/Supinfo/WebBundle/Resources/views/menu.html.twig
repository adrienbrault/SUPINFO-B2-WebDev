<div id="menu">
    <div class="login">
        {% if is_granted('ROLE_USER') %}
            <p>Logged in as <a href="{{ path('client_User_view', {'id': app.security.token.user.id}) }}">{{ app.security.token.user.username }}</a></p>
        {% endif %}

        <ul>
            {% if not is_granted('ROLE_USER') %}
                <li><a href="{{ path('login') }}">Login</a></li>
            {% endif %}

            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('logout') }}">Logout</a></li>
            {% endif %}
        </ul>
    </div>

    <h1><a href="{{ path('homepage') }}">Supinfo backoffice</a></h1>
    
    <ul>
        <li><a href="{{ path('homepage') }}">Home</a>

        {% if is_granted('ROLE_CLIENT') %}
            <li><a href="{{ path('client_Loan_list') }}">Loans</a></li>
            <li><a href="{{ path('client_Article_list') }}">Articles</a></li>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('admin_Place_list') }}">Place</a></li>
            <li><a href="{{ path('admin_Article_list') }}">Article</a></li>
            <li><a href="{{ path('admin_Family_list') }}">Family</a></li>
            <li><a href="{{ path('admin_SubFamily_list') }}">SubFamily</a></li>
            <li><a href="{{ path('admin_Structure_list') }}">Structure</a></li>
            <li><a href="{{ path('admin_SubFamilyField_list') }}">SubFamilyField</a></li>
            <li><a href="{{ path('admin_User_list') }}">User</a></li>
        {% endif %}
    </ul>

    <div>
        {% if is_granted('ROLE_CLIENT') %}
            {% include 'SupinfoWebBundle:Client/Search:form.html.twig' %}
        {% endif %}
    </div>
</div>