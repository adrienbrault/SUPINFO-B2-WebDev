<div id="menu">
    <div>
        <div id="search">
            {% if is_granted('ROLE_CLIENT') %}
                {% include 'SupinfoWebBundle:Client/Search:form.html.twig' %}
            {% endif %}
        </div>
        
        <div id="login">
            {% if is_granted('ROLE_USER') %}
                Logged in as <a href="{{ path('client_User_view', {'id': app.security.token.user.id}) }}">{{ app.security.token.user.username }}</a>
            {% endif %}

            {% if not is_granted('ROLE_USER') %}
                <a href="{{ path('login') }}">Login</a>
            {% endif %}

            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('logout') }}">Logout</a>
            {% endif %}
        </div>
    </div>

    <ul>
        <li><a href="{{ path('homepage') }}">Home</a>

        {% if is_granted('ROLE_USER') %}
            <li><a href="{{ path('client_Loan_list') }}">Loans</a></li>
            <li><a href="{{ path('client_Article_list') }}">Articles</a></li>
        {% endif %}
    </ul>
    {% if is_granted('ROLE_ADMIN') %}
        <ul>
            <li><a href="{{ path('admin_Place_list') }}">Place</a></li>
            <li><a href="{{ path('admin_Article_list') }}">Article</a></li>
            <li><a href="{{ path('admin_Family_list') }}">Family</a></li>
            <li><a href="{{ path('admin_SubFamily_list') }}">SubFamily</a></li>
            <li><a href="{{ path('admin_Structure_list') }}">Structure</a></li>
            <li><a href="{{ path('admin_User_list') }}">User</a></li>
            <li><a href="{{ path('admin_Stats') }}">Stats</a></li>
        </ul>
    {% endif %}
</div>